---
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Kollengo</title>
  </head>
  <body class="font-sans bg-white text-gray-900">
    <main>
      <!-- Hero Section -->
      <section class="relative flex flex-col items-center justify-center h-screen text-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-700 text-white overflow-hidden">
        <div class="absolute inset-0 pointer-events-none">
          <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600" fill="none">
            <defs>
              <linearGradient id="grad" x1="0" y1="0" x2="1" y2="1">
                <stop offset="0%" stop-color="#6366f1" />
                <stop offset="100%" stop-color="#ec4899" />
              </linearGradient>
            </defs>
            <circle cx="400" cy="300" r="300" fill="url(#grad)" fill-opacity="0.15" />
          </svg>
        </div>
        <img src="/favicon.svg" alt="Kollengo logo" class="w-16 h-16 mb-8 relative z-10" />
        <h1 class="text-4xl md:text-6xl font-bold mb-4 relative z-10">Kollengo</h1>
        <p class="text-xl md:text-2xl mb-8 relative z-10">The future of contract automation.</p>
        <a href="#notify" class="relative z-10 inline-block px-8 py-3 rounded-full bg-white text-gray-900 font-semibold shadow hover:bg-gray-100 transition">Get Notified</a>
      </section>

      <!-- Showcase Section -->
      <section class="py-24 bg-gray-50">
        <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-8">
          <div class="h-64 bg-white rounded-xl shadow-md flex items-center justify-center">
            <img src="https://source.unsplash.com/collection/190727/600x400" alt="Placeholder" class="object-cover w-full h-full rounded-xl" />
          </div>
          <div class="h-64 bg-white rounded-xl shadow-md flex items-center justify-center">
            <img src="https://source.unsplash.com/collection/190727/600x401" alt="Placeholder" class="object-cover w-full h-full rounded-xl" />
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="py-20 bg-white">
        <div class="max-w-4xl mx-auto px-4 grid md:grid-cols-3 gap-8 text-center">
          <div class="space-y-4">
            <div class="w-12 h-12 mx-auto bg-gray-100 rounded-full"></div>
            <h3 class="text-lg font-semibold">Fast</h3>
          </div>
          <div class="space-y-4">
            <div class="w-12 h-12 mx-auto bg-gray-100 rounded-full"></div>
            <h3 class="text-lg font-semibold">Secure</h3>
          </div>
          <div class="space-y-4">
            <div class="w-12 h-12 mx-auto bg-gray-100 rounded-full"></div>
            <h3 class="text-lg font-semibold">Connected</h3>
          </div>
        </div>
      </section>

      <!-- Newsletter Section -->
      <section id="notify" class="py-24 bg-gray-50">
        <div class="max-w-xl mx-auto px-4 text-center">
          <h2 class="text-3xl font-bold mb-6">Stay in the loop</h2>
          <form class="flex flex-col sm:flex-row items-center gap-4">
            <input type="email" placeholder="Email address" class="flex-1 px-6 py-3 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-900" />
            <button class="px-8 py-3 rounded-full bg-gray-900 text-white font-semibold hover:bg-gray-700 transition">Notify Me</button>
          </form>
        </div>
      </section>

      <!-- Footer -->
      <footer class="py-8 bg-gray-900 text-gray-400 text-center">
        <p>&copy; 2025 Kollengo</p>
      </footer>
    </main>
  </body>
</html>
